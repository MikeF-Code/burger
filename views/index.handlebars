{{!-- Index template --}}
<h1>Eat Da Burger!</h1>

<ul>
    {{#each burgers}}
        {{#unless eaten}}
            <li>
                {{burger_name}}
                <button class="change-eaten" data-id="{{id}}" data-eaten="{{eaten}}">Devour It!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
    {{#each burgers}}
        {{#if eaten}}
            <li>{{burger_name}}</li>>
        {{/if}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <input type="text" id="addBurger" name="burger_name">
    </div>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat!  Click the "submit" button.</p>
</form>
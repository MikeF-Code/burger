{{!-- Index template --}}
<div class="container">
    <div class="row center-align">
        <h1>Eat Da Burger!</h1>
        <p><img class="circle responsive-img" src="/assets/img/eat_burger.gif"></p>
    </div>

    <div class="row">
        <div class="col m6 center-align">
            <h4>Available Burgers</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{burger_name}}
                            <button class="btn-small waves-effect waves-light change-eaten" data-id="{{id}}">Devour It!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col m6 center-align">
            <h4>Burgers Eaten</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li><s>{{burger_name}}</s></li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row center-align">
        <h4>Add a Burger!</h4>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="addBurger" name="burger_name">
            </div>
            <button class="btn waves-effect waves-light" type="submit">Submit<i class="material-icons right">restaurant_menu</i></button>
            <p>Enter a burger you want to eat!  Click the "submit" button.</p>
        </form>
    </div>
</div>